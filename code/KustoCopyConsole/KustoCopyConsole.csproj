<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>0.0.2.0</Version>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <!--	Important to avoid the trimming warning hell ; since we automate-test everything, we do not need static analysis	-->
    <ILLinkTreatWarningsAsErrors>false</ILLinkTreatWarningsAsErrors>
    <AssemblyName>kc</AssemblyName>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <!-- Remove Legacy files from being compiled -->
    <Compile Remove="Legacy\**\*.cs" />
    <Compile Remove="Storage\Entity\**" />
    <EmbeddedResource Remove="Storage\Entity\**" />
    <None Remove="Storage\Entity\**" />
  </ItemGroup>

  <ItemGroup>
    <!-- Explicitly include Legacy files as None -->
    <None Update="Legacy\**\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Storage.Files.DataLake" Version="12.19.0" />
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
    <PackageReference Include="CsvHelper" Version="33.0.1" />
    <PackageReference Include="Microsoft.Azure.Kusto.Data" Version="12.2.3" />
    <PackageReference Include="Microsoft.Azure.Kusto.Ingest" Version="12.2.3" />
    <PackageReference Include="Polly" Version="8.4.1" />
    <PackageReference Include="YamlDotNet" Version="16.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Storage\AzureStorage\" />
  </ItemGroup>

</Project>