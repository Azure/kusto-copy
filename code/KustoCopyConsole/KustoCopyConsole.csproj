<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>0.0.3.0</Version>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <!--	Important to avoid the trimming warning hell ; since we automate-test everything, we do not need static analysis	-->
    <ILLinkTreatWarningsAsErrors>false</ILLinkTreatWarningsAsErrors>
    <AssemblyName>kc</AssemblyName>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <!-- Remove Legacy files from being compiled -->
    <Compile Remove="Legacy\**\*.cs" />
    <Compile Remove="Storage\Entity\**" />
    <EmbeddedResource Remove="Storage\Entity\**" />
    <None Remove="Storage\Entity\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Orchestration\DestinationTableLifeCycleOrchestration.cs" />
    <Compile Remove="Orchestration\MainOrchestration.cs" />
    <Compile Remove="Orchestration\SourceTableExportingOrchestration.cs" />
    <Compile Remove="Orchestration\SourceTableIterationOrchestration.cs" />
    <Compile Remove="Orchestration\SourceTablePlanningOrchestration.cs" />
    <Compile Remove="Orchestration\SubOrchestrationBase.cs" />
  </ItemGroup>

  <ItemGroup>
    <!-- Explicitly include Legacy files as None -->
    <None Update="Legacy\**\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Storage.Files.DataLake" Version="12.21.0" />
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
    <PackageReference Include="Microsoft.Azure.Kusto.Data" Version="12.2.8" />
    <PackageReference Include="Microsoft.Azure.Kusto.Ingest" Version="12.2.8" />
    <PackageReference Include="Polly" Version="8.5.0" />
    <PackageReference Include="YamlDotNet" Version="16.3.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Storage\AzureStorage\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Orchestration\DestinationTableLifeCycleOrchestration.cs" />
    <None Include="Orchestration\MainOrchestration.cs" />
    <None Include="Orchestration\SourceTableExportingOrchestration.cs" />
    <None Include="Orchestration\SourceTableIterationOrchestration.cs" />
    <None Include="Orchestration\SourceTablePlanningOrchestration.cs" />
    <None Include="Orchestration\SubOrchestrationBase.cs" />
  </ItemGroup>

</Project>